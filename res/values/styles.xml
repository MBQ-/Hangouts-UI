<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="wtf" parent="@*android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/wtfAB</item>
    </style>
    <style name="wtfAB" parent="@*android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_solid</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:titleTextStyle">@style/wtfABTextStyle</item>
        <item name="android:fontFamily">Roboto-Light</item>
    </style>
    <style name="wtfABTextStyle" parent="@*android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ff2d2d2d</item>
    </style>
    <style name="wtfLV" parent="@*android:style/Widget.Holo.Light.ListView">
        <item name="android:divider">@drawable/lv_phone</item>
    </style>
</resources>
